{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":prHourlyLimitNone"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "automerge": true,
      "extends": ["packages:linters", "packages:test"]
    },
    {
      "matchPackagePrefixes": [
        "@types"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    }
  ]
}
